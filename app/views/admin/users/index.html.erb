<div class="container">
	<div class="row">
		<div class="col-lg-8 col-md-10 col-lg-offset-2 col-md-offset-1">
			<h2> User一覧</h2>

			<table class="table">
				<tr>
					<td style="width: 60px"> 顧客ID</td>
					<td style="width: 120px"> 氏名</td>
					<td style="width: 120px"> 氏名カナ</td>
					<td style="width: 120px"> 権限</td>
					<td style="width: 60px"></td>
					<td style="width: 60px"></td>
					<td style="width: 60px"></td>
				</tr>
				<% @users.each do |user| %>
					<tr>
						<td> <%= user.id %></td>
						<td> <%= user.name %></td>
						<td> <%= user.name_kana %></td>
						<td> <% if user.admin %> 管理者<% else %> ユーザ<% end %></td>
						<td> <%= link_to admin_user_path(user) do %> <button type="button" class="btn btn-primary btn-xs">詳細</button><% end %></td>
						<td> <%= link_to edit_admin_user_path(user) do %> <button type="button" class="btn btn-success btn-xs">編集</button><% end %></td>
						<td> <%= link_to admin_user_path(user), method: :delete, "data-confirm" => "本当に削除しますか？" do %> <button type="button" class="btn btn-danger btn-xs">削除</button><% end %></td>
					</tr>
				<% end %>
			</table>
			<%= paginate @users, class: "paginate" %>
		</div>
	</div>
</div>