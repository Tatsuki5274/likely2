<h2> User一覧</h2>

<table>
	<tr style="background-color: #ccc">
		<td style="width: 60px"> 顧客ID</td>
		<td style="width: 120px"> 氏名</td>
		<td style="width: 120px"> 氏名カナ</td>
		<td style="width: 60px"></td>
		<td style="width: 60px"></td>
		<td style="width: 60px"></td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td> <%= user.id %></td>
			<td> <%= user.name %></td>
			<td> <%= user.name_kana %></td>
			<td> <%= link_to "詳細情報", admin_user_path(user) %></td>
			<td> <%= link_to "編集", edit_admin_user_path(user) %></td>
			<td> <%= link_to "削除", admin_user_path(user), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
	<% end %>
</table>