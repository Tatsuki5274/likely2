<div class="container">
	<div class="row">
		<div class="col-lg-3 col-md-3">
			<h4>ジャンル登録</h4>
			<%= render 'admin/registration', var: @genre %>
		</div>
		<div class="col-lg-9 col-md-9">
			<h4> ジャンル一覧</h4>
			<table class="admin-list-table">
				<tr>
					<th style="width: 100px"> image</td>
					<th style="width: 200px"> name</td>
					<th style="width: 50px"></td>
					<th style="width: 50px"></td>
				</tr>
				<% @genres.each do |genre| %>
					<tr>
						<td> <%= attachment_image_tag genre, :image, :fill, 150, 100, format: 'jpeg' %></td>
						<td> <%= genre.name %></td>
						<td> <%= link_to "編集", edit_admin_genre_path(genre) %></td>
						<td> <%= link_to "削除", admin_genre_path(genre), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
					</tr>
				<% end %>
			</table>
			<%= paginate @genres, class: "paginate" %>
		</div>
	</div>
</div>