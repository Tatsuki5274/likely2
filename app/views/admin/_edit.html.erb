<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3 mt mb">
			<%= form_for [:admin, var] do |f| %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control" %>
				</div>

				<% if request.path_info == edit_admin_artist_path %>
					<div class="form-group">
						<%= f.label :name_kana, "フリガナ" %>
						<%= f.text_field :name_kana, class: "form-control" %>
					</div>
				<% end %>
				
				<% if request.path_info == edit_admin_artist_path || request.path_info == edit_admin_genre_path %>
					<div class="form-group">
						<%= f.label :image %>
						<%= f.attachment_field :image, class: "form-control" %>
						<%= attachment_image_tag var, :image, size:"150x100"%>
					</div>
				<% end %>

				<%= f.submit "Submit", class: "btn btn-default mt" %>
			<% end %>
		</div>
	</div>
</div>