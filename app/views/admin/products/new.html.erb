<div class = "row">
    <%= form_for [:admin, @product] do |f| %>
        <div class="row">
            <div class = "col-3">
                <div class = "field">
                    <%= f.label :product, :image %>
                    <%= f.file_field :image, placeholder: "プロフィール画像"%>
                </div>
            </div>
            <div class = "col-9">
                <div class = "field">
                    <%= f.label :product, :name %>
                    <%= f.text_field :name %>
                </div>

                <div class = "field">
                    <%= f.label :product, :type %>
                    <%= f.select :type, [["シングル", "Single"],["アルバム", "Album"]] %>
                </div>

                <div class = "field">
                    <%= f.label :product, :label %>
                    <%= f.text_field :label %>
                </div>

                <div class = "field">
                    <%= f.label :product, :genre %>
                    <%= f.text_field :genre %>
                </div>

                <div class = "field">
                    <%= f.label :product, :price %>
                    <%= f.number_field :price %>
                </div>

                <div class = "field">
                    <%= f.label :product, :release_date %>
                    <%= f.date_select :release_date %>
                </div>

                
                <div class = "field">
                    <%= link_to_add_field("disc add", f, :discs, {}) %>
                </div>
            </div>
            <div class="actions">
                <%= f.submit "登録!!", class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>