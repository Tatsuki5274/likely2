<div class = "row">
    <%= form_for [:admin, @product] do |f| %>
        <div class = "col-2">
            <div class = "field">
                <%= f.label :product, :image %>
                <%= f.file_field :image, placeholder: "プロフィール画像"%>
            </div>
        </div>
        <div class = "col-8">
            <div class = "field">
                <%= f.label :product, :name %>
                <%= f.text_field :name %>
            </div>

            <div class = "field">
                <%= f.label :product, :type %>
                <%= f.select :type, [["シングル", "Single"],["アルバム", "Album"]] %>
            </div>

            <div class = "field">
                <%= f.label :product, :label %>
                <%= f.text_field :label %>
            </div>

            <div class = "field">
                <%= f.label :product, :genre %>
                <%= f.text_field :genre %>
            </div>

            <div class = "field">
                <%= f.label :product, :price %>
                <%= f.text_field :price %>
            </div>

            <div class = "field">
                <%= f.label :product, :release_date %>
                <%= f.text_field :release_date %>
            </div>
        </div>

        
    <% end %>
</div>