<div class="row">
<div class="mypage-title">My Page</div>
    <div class="col-lg-6 col-md-6 col-sm-7">
        <table class="table">
        <tr>
            <td>氏名</td>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <td>フリガナ</td>
            <td><%= @user.name_kana %></td>
        </tr>
        <tr>
            <td>住所</td>
