<div class="container mt mb">
  <h3 class="text-center">アカウント登録</h3>
  <%= form_with model: @info ,url: mypages_info_path  do |f| %>
    <div class="form-group pt pb">
      <%= f.label :email, "E-mail", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.email_field :email, class: "form-control" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :name, "Name", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :name, class: "form-control" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :name_kana, "フリガナ", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :name_kana, class: "form-control" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :postal_code, "郵便番号", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :postal_code, class: "form-control" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :state, "都道府県", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :state, class: "form-control form-control-sm" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :city, "市区町村", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :city, class: "form-control" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :address, "番地", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :address, class: "form-control" %></div>
    </div>
    <div class="form-group pt pb">
      <%= f.label :tel, "電話番号", class: "col-xs-3 control-label" %>
      <div class="col-xs-6"><%= f.text_field :tel, class: "form-control form-control-sm" %></div>
    </div>
    <div class="actions">
      <%= f.submit "完了", class:"btn btn-default btn-lg" %>
    </div>
  <% end %>
</div>