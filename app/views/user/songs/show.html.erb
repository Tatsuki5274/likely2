<style>
	main{
		<%# bootstrap適応のためこのクラスの設定を追加、css結合時競合する！！ %>
		margin:0;
		padding:0 70px;
		width:auto;
	}

	.song-boxes{
		display: inline;
		float:left;
	}
	.song-box-image{
		width:40%;
		text-align: center;
	}
	.song-box-detail{
		width:60%;
		margin-top:60px;
	}
	.song-box-products{
		width:90%;
		margin:80px auto 0;
	}
	.song-font-head{
		font-size: 42px;
	}
	.song-product-head{
		display: inline-block;
	}
</style>

<main>
	<br>
	<ol class="breadcrumb">
		<li><%=link_to "Top","#" %></li>
		<li>
			<%=link_to genre_path(@track.disc.product.genre.id) do %>
				<span><%= @track.disc.product.genre.name %></span>
			<% end %>
		</li>
		<li class="active">
			<%= @track.song.name %>
		</li>
	</ol>
	<div class="song-box clearfix">
		<div class="song-box-image song-boxes">
        	<%= attachment_image_tag @track.disc.product, :image, fallback: "no_image.png", size: "300x300" %>
		</div>
		<div class="song-box-detail song-boxes">
			<h2 class="song-font-head"><%= @track.song.name %></h2><hr>
			<h2><%= @track.artist.name %></h2><hr>
		</div>
	</div>
	<% @track_list.each do |track_list| %>
		<h2 class="song-font-head song-product-head"><%= track_list.disc.product.name %></h2>
		<% if track_list.disc.product.stock == 0 %>
			<p class="song-product-head"><span class="label label-danger">売り切れ</span></p>
		<% else %>
			<p class="song-product-head"><span class="label label-success">在庫あり</span></p>
		<% end %>
		<h3 class="song-product-head">¥ <%= track_list.disc.product.price.to_s(:delimited) %></h3>
		<h3 class="song-product-head">
			<%= form_tag add_cartdetail_path, method: :post do %>
				<% if track_list.disc.product.stock > 6 %>
					<%= select_tag :number, options_for_select(1..6) %>
					<%= submit_tag "カートに入れる", class:"btn btn-primary" %>
				<% elsif track_list.disc.product.stock > 0 && track_list.disc.product.stock <= 6 %>
					<%= select_tag :number, options_for_select(1..track_list.disc.product.stock) %>
					<%= submit_tag "カートに入れる", class:"btn btn-primary" %>
				<% end %>
			<% end %>
		</h3>
		<hr>
		<% track_list.disc.product.discs.each do |disc| %>
			<% disc.track_relations.order("track_order").each do |track| %>
				<p><%= track.track_order %>:<%= track.song.name %></p>
			<% end %>
		<% end %>
	<% end %>
</main>

